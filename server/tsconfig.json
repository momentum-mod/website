{
    "compilerOptions": {
        // Staying on CJS for now
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        // Enable importing .json files
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["src/*"],
            "@common/*": ["src/common/*"],
            "@modules/*": ["src/modules/*"],
            "@config/*": ["config/*"],
            "@tests/*": ["tests/*"],
            "@db/*": ["prisma/*"],
            "@lib/*": ["lib/*"]
        }
    }
}
