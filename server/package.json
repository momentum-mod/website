{
    "name": "momentum-mod-api",
    "private": true,
    "version": "1.0.0",
    "description": "Momentum Mod API",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "start:migrate:debug": "prisma migrate dev --name init && prisma db seed && npm run start:debug",
        "start:migrate:prod": "prisma migrate dev --name production_deploy && npm run start:prod",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "3.44.0",
        "@nestjs/axios": "0.0.3",
        "@nestjs/common": "^8.1.1",
        "@nestjs/core": "^8.1.1",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.0.1",
        "@nestjs/platform-express": "^8.1.1",
        "@nestjs/swagger": "^5.1.5",
        "@nestjs/terminus": "^8.0.4",
        "@prisma/client": "^3.6.0",
        "@sentry/node": "^6.19.6",
        "@sentry/tracing": "^6.19.6",
        "@types/passport-steam": "^1.0.1",
        "passport": "^0.5.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "passport-steam": "^1.0.17",
        "prom-client": "^14.0.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.4.0",
        "steam-appticket": "^1.0.1",
        "swagger-ui-express": "^4.2.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@mermaid-js/mermaid-cli": "^9.1.2",
        "@nestjs/cli": "^8.1.3",
        "@nestjs/schematics": "^8.0.4",
        "@nestjs/testing": "^8.1.1",
        "@types/express": "^4.17.13",
        "@types/faker": "^6.6.9",
        "@types/jest": "^27.0.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.11.1",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-plugin-prettier": "^4.0.0",
        "faker": "5.5.3",
        "jest": "^27.3.0",
        "prettier-eslint": "^13.0.0",
        "prisma": "^3.8.1",
        "prisma-erd-generator": "^0.11.4",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.3.0",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
