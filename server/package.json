{
    "name": "momentum-mod-api",
    "private": true,
    "version": "1.0.0",
    "description": "Momentum Mod API",
    "license": "MIT",
    "scripts": {
        "env": "dotenv -e ../.env",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "start:migrate:debug": "npm run migrate && npm run start:debug",
        "start:push:debug": "npm run push && npm run start:debug",
        "start:migrate:prod": "dotenv -e ../.env -- prisma migrate dev --name production_deploy && npm run start:prod",
        "push": "dotenv -e ../.env -- prisma db push --accept-data-loss",
        "migrate": "dotenv -e ../.env -- prisma migrate dev --name init --skip-seed",
        "reset": "dotenv -e ../.env -- prisma migrate reset --force --skip-generate --skip-seed",
        "seed": "npm run migrate && prisma db seed",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --config ./tests/jest-e2e.json",
        "test:push": "npm run push && jest --config ./tests/jest-e2e.json",
        "test:reset": "npm run reset && jest --config ./tests/jest-e2e.json",
        "test:watch": "jest --config ./tests/jest-e2e.json --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "jest": {
        "testTimeout": 15000
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "3.131.0",
        "@nestjs/axios": "0.1.0",
        "@nestjs/common": "^9.0.3",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.0.3",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.0.3",
        "@nestjs/swagger": "^6.0.4",
        "@nestjs/terminus": "^9.0.0",
        "@prisma/client": "^4.0.0",
        "@sentry/node": "^7.7.0",
        "@sentry/tracing": "^7.7.0",
        "@types/passport-steam": "^1.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "dotenv-cli": "^6.0.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "passport-steam": "^1.0.17",
        "prom-client": "^14.0.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.6",
        "steam-appticket": "^1.0.1",
        "swagger-ui-express": "^4.5.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.3.0",
        "@mermaid-js/mermaid-cli": "^9.1.3",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.3",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.6",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.0.5",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "axios": "^0.27.2",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^28.1.3",
        "jest-environment-node": "^28.1.3",
        "prettier-eslint": "^15.0.1",
        "prisma": "^4.0.0",
        "prisma-erd-generator": "^1.0.1",
        "source-map-support": "^0.5.21",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.6",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.7.4"
    }
}
