{
  "printWidth": 80,
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "proseWrap": "always",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "printWidth": 140,
        "plugins": ["prettier-plugin-tailwindcss"],
        "tailwindConfig": "./apps/frontend/tailwind.config.js"
      }
    }
  ]
}
